### Default aliases
alias ll='ls -lFh'
alias la='ls -lFha'
alias l='ls -CF'
alias df='df -h'

### Clear
alias c="clear"
alias cl="c;ll"
alias cla="c;la"

### chmod
alias chr="chmod 644"
alias chx="chmod 755"

### Facter as YAML
alias facter="facter -y"

### Fuck
alias darn="fuck"

### GPG
alias gpg="gpg2"

### History
alias h='history'
alias hgrep="history|grep -E"

### IP
alias ipe="curl ipinfo.io/ip"

### Metasploit
alias msfconsole="msfconsole --quiet -x \"db_connect ${user}@msf\""

### MySQL
alias mysql="mysql -u $(whoami) -p"

### Python 3
alias va="source ./venv/bin/activate"
alias ve="python -m venv ./venv"
alias www="python -m http.server 8000"

### rm
alias rmf="rm -rf"

### Sensors
alias cputemp="sensors | grep Core"

### Source
alias src="source ${HOME}/.profile && source ${HOME}/.bashrc"

### Speed test
alias speed="speedtest-cli --server 2406 --simple"

### Sudo
alias sudo="sudo -E"
alias please="sudo"
