### update: distro-agnostic package updater.
update() {
	if [ -f /etc/arch-release ]; then
		sudo pacman -Syu
	
	elif [ -f /etc/os-release ]; then
		sudo sh -c "
			apt update;
			apt upgrade -y;
			apt autoclean;
			apt --purge autoremove -y"

	elif [ -f /etc/rhel-release ]; then
		sudo sh -c "
			yum update;
			sudo yum upgrade -y;
			sudo yum autoclean;
			sudo yum --purge autoremove -y"
	fi
}
