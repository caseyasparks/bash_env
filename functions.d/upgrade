### upgrade: distro-agnostic package updater.
upgrade() {
	if [ -f /bin/pacman ]; then
		sudo pacman -Syu --noconfirm
	
	elif [ -f /bin/apt ]; then
		sudo sh -c "
			apt update;
			apt upgrade -y;
			apt autoclean;
			apt --purge autoremove -y"

	elif [ -f /bin/yum ]; then
		sudo sh -c "
			yum update;
			sudo yum upgrade -y;
			sudo yum autoremove -y"
	fi
}
