### List all functions
listf() {

  printf 'Functions:\n-----\n';

  (head -n 1 ~/.bash_profile.d/bash_functions.d/* |
    tr -d '\n\n' |
    sed -e 's/\/home\/*\/\.bash_profile.d\/bash_functions\.d\///g' \
      -e 's/### //g' \
      -e 's/ <==/=/g' \
      -e 's/==> /\n/g';
    printf '\n') |
    column -t -s =|
    sed '/README/d';

  printf '\n';

}
