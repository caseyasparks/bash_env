### Network information
netinfo() {

  printf "Network Information\n";
  printf "===================\n";

  (printf "Local IP:"
    printf "$(ifconfig | awk '$1=="inet"{printf $2; exit}')\n"
    printf "Netmask:"
    printf "$(ifconfig | awk '$3=="netmask"{printf $4; exit}')\n"
    printf "Broadcast:"
    printf "$(ifconfig | awk '$5=="broadcast"{printf $6; exit}')\n\n") |
  column -t -s:;

  printf "\n";

}
